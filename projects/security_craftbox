function tryCount(count)
	count=tonumber(count)
	local base=5 --Change based on how many login attempts you want...
	if count < base then
		return true
	elseif count==base then
		return false
	end
end

--Gets encryption software StrUtils
function getStrUtils()
	if not fs.exists("/~temp/StrUtils") then
		if not fs.exists("/~temp") then
			fs.makeDir("/~temp")
		else
			fs.delete("/~temp")
			fs.makeDir("/~temp")
		end
		shell.run("pastebin","get","5B77snmj","/~temp/StrUtils")
	else
		return true
	end
end

function block(ids,reg)
	if not ids then return false end
	if not fs.exists("blacklist") and reg==true then
		local blockd = ids
		local blockStart = os.time()*20
		block="blocks = {id="..blockd..",timed=5,start="..blockStart.."}"
		han = io.open("blacklist","w")
		han:write(block)
		han:close()
	else
		if fs.exists("/blacklist") then
			dofile('blacklist')
            if not blocks then error('Execution failed!') end
            if blocks.timed == nil or blocks.start == nil then
                error('Ban write time') 
            end
			add = blocks.timed+blocks.start
            if not blocks.id then error('Probs')
			fin = add-os.time()
			if blocks.id==ids and not os.time()==add then
				error("You are currently prohibited from CCraftBox. Please wait "..fin)
			else
				fs.delete("blacklist")
			end
		end
	end
end
